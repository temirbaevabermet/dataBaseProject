<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.phones_repair.viewControllers.supplier.SupplierViewController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f9f9f9; -fx-padding: 20;" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">

        <Text style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #333;" text="Select Option" />
        <TextField fx:id="idInputField" promptText="Enter your ID" maxWidth="150" style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-padding: 5px;" />

        <Button fx:id="viewOrdersButton" maxWidth="200" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;" text="View orders" />
        <Button fx:id="executeOrderButton" maxWidth="200" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;" text="Execute order" />

    </VBox>

</AnchorPane>
